{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    /* Enable Strict */
    "strict": true,
    /* Override Strict */
    "alwaysStrict": false,
    "strictNullChecks": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    /* */
    "target": "es6",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "incremental": true,
    "tsBuildInfoFile": ".buildcache/.tsbuildinfo"
  },
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "coverage",
    ".jest",
    "babel.config.js",
    "jest.config.js",
    "metro.config.js",
    "index.js",
    "src/scripts/confetti.js",
    ".eslintrc.js"
  ]
}
